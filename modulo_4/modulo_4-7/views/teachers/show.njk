{% extends "layout.njk" %}

{% block header %}
  <title>Módulo 4 - Teachers</title>
{% endblock %}

{% block content %}

<h3>Detalhes</h3>
<div class="card">
  <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center;"></section>
  <section class="details">
    <div class="item">
      <div>Nome completo</div>
      <div>{{teacher.name}}</div>
    </div>
    <div class="item">
      <div>Idade</div>
      <div>{{teacher.age}}</div>
    </div>
    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        {% if teacher.level == "medio" %}Ensino Médio Completo
        {% elseif teacher.level == "superior" %}Ensino Superior Completo
        {% elseif teacher.level == "mest" %}Mestrado
        {% elseif teacher.level == "dout" %}Doutorado
        {% endif %}
      </div>
    </div>
    <div class="item">
      <div>Tipo de aula</div>
      <div>{{teacher.classtype}}</div>
    </div>
    <div class="item">
      <div>Acompanhamento </div>
      <div>
      {% for areas in teacher.area %}
        <span>{{areas}}</span>
      {% endfor %}
      </div>
    </div>
    <div class="item">
      <div>Desde </div>
      <div>{{teacher.created_at}}</div>
    </div>

    <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
  </section>
</div>

{% endblock %}