<form class="card" method="POST" action="/teachers">
  <section class="avatar" style="background: url(https://source.unsplash.com/collection/8874679/600x600) no-repeat center;"></section>
  <section class="details">
    <div class="item">
      <div>Avatar URL</div>
      <div><input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}"></div>
    </div>
    <div class="item">
      <div>Nome completo</div>
      <div><input type="text" name="name"placeholder="Nome completo" value="{{teacher.name}}"></div>
    </div>
    <div class="item">
      <div>Data de Nascimento</div>
      <div><input type="date" name="birth" value="{{teacher.birth}}"></div>
    </div>
    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        <select name="level">
          <option value="" disabled selected>Selecione...</option>
          <option value="medio" {% if teacher.classtype == "medio" %} selected {% endif %}>Ensino Médio Completo</option>
          <option value="superior" {% if teacher.classtype == "superior" %} selected {% endif %}>Ensino Superior Completo</option>
          <option value="mest" {% if teacher.classtype == "mest" %} selected {% endif %}>Mestrado</option>
          <option value="dout" {% if teacher.classtype == "dout" %} selected {% endif %}>Doutorado</option>
        </select>
      </div>
    </div>
    <div class="item">
      <div>Tipo de aula</div>
      <div>
        <span><input type="radio" name="classtype" value="Presencial" {% if teacher.classtype == "Presencial" %} checked {% endif %} >Presencial</span>
        <span><input type="radio" name="classtype" value="À distância" {% if teacher.classtype == "À distância" %} checked {% endif %}>À distância</span>
      </div>
    </div>
    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input type="text" name="area" placeholder="Ex: Matemática, Português" value="{{teacher.area}}">
      </div>
    </div>
    <button type="submit">Salvar</button>
  </section>
</form>