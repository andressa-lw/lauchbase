{% extends "layout.njk" %}

{% block header %}
  <title>Módulo 4 - Teachers</title>
{% endblock %}

{% block content %}

<h3>Novo Professor</h3>
<form class="card" method="POST" action="/teachers">
  <section class="avatar" style="background: url(https://source.unsplash.com/collection/8874679/600x600) no-repeat center;"></section>
  <section class="details">
    <div class="item">
      <div>Avatar URL</div>
      <div><input type="url" name="avatar_url" placeholder="http://"></div>
    </div>
    <div class="item">
      <div>Nome completo</div>
      <div><input type="text" name="name"placeholder="Nome completo"></div>
    </div>
    <div class="item">
      <div>Data de Nascimento</div>
      <div><input type="date" name="birth"></div>
    </div>
    <div class="item">
      <div>Grau de escolaridade</div>
      <div>
        <select name="level">
          <option value="" disabled selected>Selecione...</option>
          <option value="Ensino Médio Completo">Ensino Médio Completo</option>
          <option value="Ensino Superior Completo">Ensino Superior Completo</option>
          <option value="Mestrado">Mestrado</option>
          <option value="Doutorado">Doutorado</option>
        </select>
      </div>
    </div>
    <div class="item">
      <div>Tipo de aula</div>
      <div>
        <span><input type="radio" name="classtype" value="Presencial" checked>Presencial</span>
        <span><input type="radio" name="classtype" value="À distância">À distância</span>
      </div>
    </div>
    <div class="item">
      <div>Área de atuação</div>
      <div>
        <input type="text" name="area" placeholder="Ex: Matemática, Português">
      </div>
    </div>
    <button type="submit">Salvar</button>
  </section>
</form>

{% endblock %}