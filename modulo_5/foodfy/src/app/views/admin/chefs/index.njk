{% extends "admin/layout.njk" %}

{% block header %}
  <title>Admin Foodfy</title>
{% endblock %}

{% block content %}

<div class="topo">
  <h3>Gerenciar Chefs</h3>
  <a href="/admin/chefs/create">Novo Chef</a>
</div>

<div class="grid-chefs">
  {% for chef in chefs %}
    <div class="box" id="{{chef.id}}">
      <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
      <div>
        <h3>{{chef.name}}</h3>
        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
      </div>
    </div>
  {% endfor %}
</div>

{% endblock %}