{% extends "layout.njk" %}

{% block header %}
  <title>FoodFy - Receitas</title>
{% endblock %}

{% block content %}

<section class="receitas">
  <div class="container">
    <div class="receita">
        <img src="{{receita.image}}" alt="Imagem de {{receita.title}}">
        <h3>{{receita.title}}</h3>
        <span>por {{receita.author}}</span>

        <h4>Ingredientes <small>Mostrar</small></h4>
        <ul class="content">
          {% for ingredient in receita.ingredients %}
          <li>{{ingredient}}</li>
          {% endfor %}
        </ul>

        <h4>Modo de preparo <small>Mostrar</small></h4>
        <ul class="content">
          {% for preparation in receita.preparation %}
          <li>{{preparation}}</li>
          {% endfor %}
        </ul>

        <h4>Informações Adicionais <small>Mostrar</small></h4>
        <p class="content">{{receita.information}}</p>

    </div>
  </div>
</section>

{% endblock %}